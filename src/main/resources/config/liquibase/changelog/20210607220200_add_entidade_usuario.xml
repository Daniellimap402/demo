<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet  id="1"  author="daniel.pinheiro">
        <createTable  tableName="TB_PESSOA">
            <column  name="ID"  type="number" autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="NOME"  type="varchar(100)">
                <constraints  nullable="false"/>
            </column>
            <column  name="SENHA"  type="varchar(20)">
                <constraints  nullable="false"/>
            </column>
            <column name="EMAIL" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="CPF_CNPJ" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="NUM_TELEFONE" type="varchar(20)">
            </column>
            <column  name="REGISTRO_ATIVO"  type="char(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>